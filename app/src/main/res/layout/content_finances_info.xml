<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="10dp"

    android:background="@color/dgrey"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Client Name"
        android:id="@+id/theclientname"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/thelessondate"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver No."
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/thelessondate"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver No."
        android:id="@+id/thelessondate"
        android:layout_margin="5dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/theclientname"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No. of lessons taken"
        android:id="@+id/textView3"
        android:layout_below="@+id/thelessondate"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No. of lessons taken"
        android:id="@+id/thelessontime"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/thelessondate"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To be paid"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/thelessonlocation"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No. of lessons to be paid"
        android:id="@+id/thelessonlocation"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/thelessontime"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price per lessons"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/thelessoncomments"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price per lesson"
        android:id="@+id/thelessoncomments"
        android:layout_margin="5dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/thelessonlocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Balance"
        android:id="@+id/textView6"
        android:layout_below="@+id/thelessoncomments"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Balance due"
        android:id="@+id/thedob"
        android:layout_margin="5dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/thelessoncomments"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/white"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Client"
        android:id="@+id/delete_client_btn"
        android:onClick="listBookNames"

        style="?android:attr/buttonStyleSmall"
        android:background="@color/turq"
        android:maxWidth="100dp"
        android:minHeight="20dp"
        android:textSize="11dp"
        android:padding="5dp"
        android:textColor="@color/white"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goBack"
        android:id="@+id/button"
        android:onClick="goBackScreen"

        style="?android:attr/buttonStyleSmall"
        android:textSize="11dp"
        android:background="@color/turq"
        android:maxWidth="100dp"
        android:minHeight="20dp"
        android:padding="5dp"
        android:textColor="@color/white"


        android:layout_marginLeft="1dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/website"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="11dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:id="@+id/website"
        android:src="@drawable/active5"

        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button"/>


</RelativeLayout>
