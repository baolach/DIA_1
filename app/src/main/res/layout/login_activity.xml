<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:padding="10dp"
                android:background="@color/dgrey"
                >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignTop="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginTop="67dp"
        android:id="@+id/password"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white" >
        <requestFocus />
    </EditText>


    <ImageView
        android:id="@+id/imageView3"
        android:src="@drawable/active5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:ems="10"
        android:id="@+id/username"
        android:hint="@string/username"
        android:textColorHint="@color/white"
        android:layout_marginTop="178dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:nextFocusForward="@+id/password"

        >
        <requestFocus />
    </EditText>

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/loginBtn"
        android:background="@color/turq"
        android:textAlignment="gravity"
        android:layout_alignBaseline="@+id/registerBtn"
        android:layout_alignBottom="@+id/registerBtn"
        android:layout_alignStart="@+id/password"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:background="@color/dturq"
        android:textColor="@color/white"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/password"/>
</RelativeLayout>