<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="16dp" tools:context=".AdminActivity"
                android:background="@color/dgrey"

    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:id="@+id/website"
        android:src="@drawable/active5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp"


    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Lessons"
        android:id="@+id/list_lessons_btn"
        android:layout_below="@+id/website"
        android:layout_alignParentStart="true"
        android:background="@color/turq"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Lesson"
        android:id="@+id/new_lesson_btn"
        android:layout_below="@+id/list_lessons_btn"
        android:layout_alignParentStart="true"
        android:background="@color/turq"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Clients"
        android:id="@+id/list_clients_btn"
        android:layout_below="@+id/new_lesson_btn"
        android:layout_alignParentStart="true"
        android:background="@color/turq"

        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Client"
        android:id="@+id/new_client_btn"
        android:layout_below="@+id/list_clients_btn"
        android:layout_alignParentStart="true"

        android:background="@color/turq"

        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminders"
        android:id="@+id/reminders_btn"
        android:layout_below="@+id/new_client_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/turq"
        android:layout_margin="3dp"

    />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goBack"
        android:id="@+id/back_screen_btn"
        android:onClick="back_screen_btn"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:textSize="10dp"
        android:background="@color/turq"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/list_lessons_btn"
        android:layout_alignStart="@+id/list_lessons_btn"
        />


</RelativeLayout>
