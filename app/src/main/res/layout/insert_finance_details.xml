<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="@color/white">
    <TextView
        android:id="@+id/text_task"
        android:text="New Payment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="true"

        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_margin="20dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewL"
        android:src="@drawable/l"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/editText_clientName"
        android:hint="Client Name"
        android:layout_width="200dp"

        android:layout_height="40dp"
        android:background="@color/grey"
        android:textColorHint="@color/white"
        android:padding="10dp"

        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageViewL"
        android:layout_alignStart="@+id/editText_driverNo"
        android:layout_alignParentEnd="true"/>



    <EditText
        android:id="@+id/editText_driverNo"
        android:hint="Driver No."
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/grey"
        android:textColorHint="@color/white"
        android:padding="10dp"

        android:layout_below="@+id/editText_clientName"
        android:layout_margin="1dp"/>
    <EditText
        android:id="@+id/editText_noOfLessons"
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/grey"
        android:textColorHint="@color/white"
        android:padding="10dp"

        android:hint="No. of lessons"
        android:layout_below="@+id/editText_driverNo"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"
        android:inputType="number"

        />

    <EditText
        android:id="@+id/editText_lessonsToBePaid"
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/grey"
        android:textColorHint="@color/white"
        android:padding="10dp"

        android:hint="No. of lessons to pay for"
        android:layout_below="@+id/editText_noOfLessons"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"

        android:inputType="number"
        />

    <EditText
        android:id="@+id/editText_pricePerLesson"
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/grey"
        android:textColorHint="@color/white"
        android:padding="10dp"

        android:hint="Price per lesson"
        android:layout_below="@+id/editText_lessonsToBePaid"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"
        android:inputType="number"

        />

    <Button
        android:id="@+id/button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goBack"
        android:onClick="goBackScreen"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:textSize="10dp"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:layout_below="@+id/imageViewL"
        android:layout_alignStart="@+id/editText_lessonName"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/calculate"
        android:layout_width="fill_parent"

        android:layout_height="40dp"
        android:background="@color/grey"

        android:text="Calculate"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>



</RelativeLayout>