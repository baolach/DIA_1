<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="10dp"

    android:background="@color/dgrey"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:id="@+id/website"
        android:src="@drawable/active5"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_client_btn"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        style="?android:attr/buttonStyleSmall"
        android:background="@color/turq"
        android:maxWidth="100dp"
        android:minHeight="20dp"
        android:textSize="11dp"
        android:padding="5dp"
        android:textColor="@color/white"

        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date"
        android:id="@+id/theexpensedate"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/textview_date"
        android:layout_alignBottom="@+id/textview_date"
        android:layout_alignStart="@+id/theexpensename"

        android:maxLines="1"
        android:ellipsize="marquee"

        android:marqueeRepeatLimit="2"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:singleLine="true"
        />

    <TextView

        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="amount"
        android:id="@+id/theexpenseamount"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/textview_amount"
        android:layout_alignBottom="@+id/textview_amount"
        android:layout_alignStart="@+id/theexpensedate"

        android:ellipsize="marquee"
        android:layout_width="fill_parent"
        android:marqueeRepeatLimit="2"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:singleLine="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update "
        android:id="@+id/update_client_btn"
        android:onClick="update"
        style="?android:attr/buttonStyleSmall"
        android:background="@color/turq"
        android:maxWidth="100dp"
        android:minHeight="20dp"
        android:textSize="11dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"

        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/delete_client_btn"
        android:layout_alignBottom="@+id/delete_client_btn"
        android:layout_toEndOf="@+id/delete_client_btn"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goBack"
        android:id="@+id/button"
        android:onClick="goBackScreen"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"

        style="?android:attr/buttonStyleSmall"
        android:textSize="11dp"
        android:background="@color/dturq"
        android:maxWidth="100dp"
        android:minHeight="20dp"
        android:padding="5dp"
        android:textColor="@color/white"


        android:layout_marginTop="19dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/website"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/textview_amount"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:layout_marginTop="17dp"
        android:layout_below="@+id/textview_expense"
        android:layout_alignStart="@+id/textview_expense"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textview_date"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textview_amount"
        android:layout_toStartOf="@+id/delete_client_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Expense"
        android:id="@+id/textview_expense"
        android:textStyle="bold"

        android:textColor="@color/white"

        android:layout_marginTop="31dp"
        android:layout_below="@+id/delete_client_btn"
        android:layout_alignStart="@+id/button"/>

    <TextView
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="expense"
        android:id="@+id/theexpensename"
        android:textColor="@color/white"
        android:layout_width="fill_parent"



        android:maxLines="1"
        android:scrollbars="horizontal"

        android:layout_alignBaseline="@+id/textview_expense"
        android:layout_alignBottom="@+id/textview_expense"
        android:layout_alignStart="@+id/update_client_btn"
        android:layout_marginStart="20dp"/>


</RelativeLayout>
